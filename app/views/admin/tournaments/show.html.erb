<% if @tour %>
  <% provide(:title, @tour.name) %>
  <%= render 'layouts/admin/tournament_menu'%>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= @tour.name %>
        </h1> 
        <h3><%= @tour.teams.size%></h3>
      </section>
    </aside>
  </div>
  <div class="row">
    <aside class="container">
      <%= @tour.description%>
    </aside>
  </div>
<% else %>
  <% provide(:title, 'Not Found') %>
  <h4>Could not found this tournament. Please check again</h4>
<% end %>
