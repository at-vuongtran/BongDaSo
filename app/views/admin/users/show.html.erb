<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <% if current_user?(@user) %>
        <p>
          <%= link_to "Update Profile", edit_admin_user_path(@user) %>
        </p>
      <% end %> 
    </section>
  </aside>
</div>
