<% if @user %>
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar.variant(resize_to_limit: [500, 500]) %>
      <% else %>
        <%= image_tag('default_image.jpg', size: '300x300') %>
      <% end %>
    </aside>
    <aside class="col-md-8">
      <section class="user_info">
        <h1>
          <%= @user.name %>
        </h1>
        <p>Email: <%= @user.email %><p>
        <p>Total Posts: <%= @user.posts.size %><p>
        <% if current_user?(@user) %>
          <p>
            <%= link_to "Update Profile", edit_admin_user_path(@user) %>
          </p>
        <% end %> 
      </section>
    </aside>
  </div>
<% else %>
  <% provide(:title, 'Not found') %>
  <h4>Could not found page. Please check again.</h4>
<% end %>
