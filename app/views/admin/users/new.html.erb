<% provide(:title, 'Create new user') %>
<h1>Create User</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: "/admin/users") do |f| %>
      <%= render partial: 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control', required: true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', required: true %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>

      <%= f.label :role_id, "Role" %>
      <%= f.collection_select :role_id, @roles, :id, :name, {:include_blank => true}, { class: 'form-control' } %>

      <%= f.label "Profile Photo" %>
      <%= f.file_field :avatar %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
