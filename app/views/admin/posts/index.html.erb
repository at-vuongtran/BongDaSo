<% provide(:title, "Tất cả bài đăng") %>
<h1>Danh sách các bài đăng</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Tiêu đề</th>
      <th scope="col">Người viết</th>
      <th scope="col">Trạng thái</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= render post %>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<script>
  console.log(<%= raw @posts.pluck(:title) %>);
  <%= render %>
</script>