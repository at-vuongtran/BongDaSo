<% provide(:title, 'Create a post') %>
<h3>Create A Post</h3>

<div class="row">
  <div class="col-md-12">
    <%= form_with scope: :post, url: "/admin/posts", local: true do |f| %>
      <%= render "shared/error_with_messages"%>

      <%= f.label :category %>
      <%= f.collection_select :category_id, @categories, :id, :name, {:include_blank => true}, { class: 'form-control' } %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', required: true %>

      <%= f.label :content %>
      <%= f.rich_text_area :content, required: true %>

      <%= f.hidden_field :status, value: false %>

      <%= f.submit "Táº¡o ngay", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
