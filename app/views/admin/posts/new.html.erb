<% provide(:title, 'Thêm một bài đăng') %>
<h1>Tạo một bài viết</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: "/admin/posts") do |f| %>
      <%= render partial: 'shared/error_messages', object: f.object %>

      <%= f.label 'tiêu đề' %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label 'nội dung' %>
      <%= f.text_area :content, class: 'form-control' %>

      <%= f.label 'thể loại' %>
      <%= f.text_field :category, class: 'form-control' %>

      <%= f.hidden_field :status, value: false, class: 'form-control' %>

      <%= f.submit "Tạo ngay", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
