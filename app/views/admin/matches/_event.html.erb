<div class="col-md-12 form-create-event">
  <%= form_with scope: :event, url: admin_events_path, remote: true, class: "form1" do |f| %>
    <%= f.label :player_id, "Player" %>
    <%= f.collection_select :player_id, result.team.players, :id, :name, {:include_blank => true}, { class: "form-control col-form-label-sm", required: true } %>

    <%= f.label :event_detail_id, "Event Type" %>
    <%= f.collection_select :event_detail_id, @event_details, :id, :name, {:include_blank => true}, { class: "form-control col-form-label-sm", required: true } %>
    <%= f.hidden_field :result_id, value: result.id %>
    <%= f.submit "Save", class: "btn btn-primary btn-sm btn-inline" %>
    <button type="button" class="btn btn-primary btn-sm btn-remove">Cancel</button>
  <% end %>
</div>
