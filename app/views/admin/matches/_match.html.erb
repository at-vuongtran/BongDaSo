<div class="col-sm-6">
  <div class="card">
    <div class="card-header">
      <h5><%= "#{match.results.first.team.name} vs #{match.results.last.team.name}" %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-8">
          <p class="card-text">Place: <%= match.place %></p>
          <p class="card-text">Time: <%= match.time.to_formatted_s(:long) %>.</p>
          <% if match.time >= Time.zone.now %>
            <% msg = 'Edit info match' %>
          <% else %>
            <% msg = 'Update result match' %>
          <% end %>
          <p class="card-link"><%= link_to msg, edit_admin_tournament_match_path(@tour, match)%></p>
        </div>
        <% if match.time_end %>
          <div class="col-sm-4"><h4><%= match.results.first.goals%> : <%= match.results.last.goals%></h4></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

